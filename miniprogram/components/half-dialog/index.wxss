/* components/half-dialog/index.wxss */
@import "/theme.wxss";
.com-half-dialog{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: #F0F2F6;
}

.com-half-dialog.modal{
	display: flex;
	display: -webkit-flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.com-half-dialog > .dialog{
	width: 90%;
	box-sizing: border-box;
	padding: 20rpx;
}

.com-half-dialog > .dialog.fixed-bottom{
	position: absolute;
	left: 5%;
}

.dialog .header{
	width: 100%;
	position: relative;
	top: 0;
	left: 0;
}

.dialog .header .title{
	display: flex;
	display: -webkit-flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.dialog .header .close{
	width: 80rpx;
	position: absolute;
	top: 0;
	right: 0;
}

.dialog .content{
	width: 100%;
	height: 100%;
	max-height: 70vh;
	box-sizing: border-box;
	padding: 30rpx;
	overflow-y: scroll;
}


